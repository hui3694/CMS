
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Areas/Admin/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Areas/Admin/css/bootstrap-theme.css" rel="stylesheet" />
    <!--font-awesome 核心我CSS 文件-->
    <link href="//cdn.bootcss.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">  
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Areas/Admin/js/bootstrap.js"></script>
    <style>
        body {
            background-color: #eeeeee;
        }
        .input-group{
            margin-bottom:15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <br /><br /><br /><br />
            <br /><br /><br /><br />
            <div class="col-sm-6 col-sm-offset-3">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">登陆</h3>
                    </div>
                    <div class="panel-body">
                        <form class="navbar-left" action="~/Admin/Main/DoLogin" method="post">
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="fa fa-user fa-lg"></i></span>
                                <input type="text" class="form-control" name="UserName" placeholder="请输入用户名" />
                            </div>

                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="fa fa-lock fa-lg"></i></span>
                                <input type="password" class="form-control" name="PassWord" placeholder="密码" />
                            </div>

                            <div class="text-right">
                                <button type="submit" class="btn btn-info btn-lg btn-block">登陆</button>
                            </div>
                            
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
